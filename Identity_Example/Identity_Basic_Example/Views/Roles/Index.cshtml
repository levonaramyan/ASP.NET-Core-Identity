@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Կայքում սահմանված դերերը</h1>
<table class="table">
    <tr>
        <th>Դեր</th>
        <th>Գործողություն</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-Id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Ջնջել</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="form-group">
    <a asp-action="Create" class="btn btn-success col-xl-3">Ավելացնել դեր</a>
    <a asp-action="UserList" class="btn btn-primary col-xl-3">Օգտատերերի ցանկը</a>
</div>


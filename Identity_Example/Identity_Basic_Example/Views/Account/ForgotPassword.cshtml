@model Identity_Basic_Example.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>Forgot Password</h1>
<form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <h4>Ներմուծեք ձեր էլ․ փոստի հասցեն</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control col-xl-3" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ուղարկել</button>
    </div>
</form>


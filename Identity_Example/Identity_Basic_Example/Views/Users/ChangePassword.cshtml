@model Identity_Basic_Example.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Փոփոխել գաղտնաբառը";
}

<h1>Փոփոխել գաղտնաբառը</h1>
<form asp-action="ChangePassword" asp-controller="Users" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" hidden />
    <input asp-for="Email" hidden />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Հին գաղտնաբառ</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Նոր գաղտնաբառ</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" />
    </div>
</form>

